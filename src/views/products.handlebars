<h1 style="text-align: center;">
  Produtos disponíveis
</h1>

<div
  style="display: flex; justify-content: center; gap: 1rem; flex-wrap: wrap; margin-bottom: 1rem;"
>
  <label for="category">
    Filtrar por categoria:
  </label>
  <select id="category">
    <option value="">
      Todas
    </option>
    <option value="Roupas Femininas">
      Roupas Femininas
    </option>
    <option value="Roupas Masculinas">
      Roupas Masculinas
    </option>
    <option value="Acessorios">
      Acessorios
    </option>
    <option value="Beleza">
      Beleza
    </option>
    <option value="Eletronicos">
      Eletronicos
    </option>
    <option value="Livros">
      Livros
    </option>
    <option value="Escola">
      Escola
    </option>
    <option value="Ferias">
      Ferias
    </option>
  </select>

  <label for="sort">
    Ordenar por preço:
  </label>
  <select id="sort">
    <option value="">
      Nenhum
    </option>
    <option value="asc">
      Menor preço
    </option>
    <option value="desc">
      Maior preço
    </option>
  </select>

  <label for="search">
    Buscar:
  </label>
  <input type="text" id="search" placeholder="Digite o nome do produto" />
</div>

<!-- PRODUTOS + PAGINAÇÃO -->
<div
  id="products-container"
  style="display: flex; flex-direction: column; align-items: center;"
>
  <div
    id="product-list"
    style="display: flex; flex-wrap: wrap; justify-content: center; gap: 4px; max-width: 900px;"
  ></div>

  <div id="pagination-controls" style="margin-top: 1rem;">
    <button id="prevPage">
      Anterior
    </button>
    <span id="currentPage">
      Página 1
    </span>
    <button id="nextPage">
      Próxima
    </button>
  </div>
</div>

<script src="/static/js/products.js" defer></script>