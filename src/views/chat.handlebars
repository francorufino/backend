<h1>
  Suporte ao Cliente
</h1>

<form id="chatForm">
  <input
    type="text"
    id="nomeInput"
    name="nome"
    placeholder="Seu nome"
    required
  />

  <textarea
    id="msgInput"
    name="mensagem"
    placeholder="Digite sua mensagem..."
    required
  ></textarea>
  <button type="submit">
    Enviar
  </button>
</form>

<hr />

<h2>
  Mensagens
</h2>
<ul id="messages">
  {{#each mensagens}}
    <li>
      <strong>
        {{this.user}}
      </strong>
      : {{this.message}}
      <em>
        ({{this.createdAt}})
      </em>
    </li>
  {{/each}}
</ul>

<script src="/socket.io/socket.io.js"></script>
<script src="/static/js/chat.js"></script>